                            <input style="margin-left: 3%;" required>
                            <input style="margin-left: 3%;" required>
                            <input style="margin-left: 3%;" required>
                            <input style="margin-left: 3%;" required>
                        </label>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 order-1 order-lg-2 hero-img" data-aos="fade-left">
                <img src="../assets/img/input-pin-baru.svg" class="img-fluid" alt="" style="margin-top: 5%; float: right;">
            </div>
        </div>
    </div>
</section>
