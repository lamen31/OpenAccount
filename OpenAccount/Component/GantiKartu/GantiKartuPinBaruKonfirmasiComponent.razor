<section id="hero">

    <div class="container">
        <div class="row" style="margin-top: 15%;">
            <div class="col-xl-6 pt-5 pt-lg-0 order-2 order-lg-1 d-flex flex-column justify-content-center" data-aos="fade-up">
                <div>
                    <span class="badge badge-primary" style="margin-bottom: 2rem; font-size: 20px; width: 35%;">Kartu Expired</span><br>
                    <h3 style="color: #00529C; font-size: 30px;">Konfirmasi <b>PIN ATM Baru</b></h3>
                    <h3 style="font-size: 20px; margin-top: 8%;">PIN ATM Baru <b style="color: #40B703;">(PIN Sesuai)</b></h3>
                    <div class="omrs-input-group" style="padding: 15px 0px 0px 0px;">
                        <label class="omrs-input-underlined">
                            <input required>
                            <input style="margin-left: 3%;" required>
                            <input style="margin-left: 3%;" required>
                            <input style="margin-left: 3%;" required>
                            <input style="margin-left: 3%;" required>
                            <input style="margin-left: 3%;" required>
                        </label>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 order-1 order-lg-2 hero-img" data-aos="fade-left">
                <img src="../assets/img/Folder SVG/input-pin-baru.svg" class="img-fluid" alt="" style="margin-top: 5%; float: right;" @onclick="Berhasil">
            </div>
        </div>
    </div>
</section>
<!-- End Hero -->
