@code {
    [Parameter]
    public EventCallback<string> OnClick { get; set; }

    private bool loopFinger = false;
    private bool FingerValid = true;
    private int trylimit = 3;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(1000);
        Console.WriteLine("ID SCANNER BACK SWALLOW");
        Utility.WriteLog("Ganti kartu condition : id scanner back swallow", "step-action");
        scanner.BackSwallow();
        loopFinger = true;
        CheckFingerValid();
        //OnClick.InvokeAsync("gantikartufingerberhasil");
    }

    private async Task CheckFingerValid()
    {
        do
        {
            await Task.Delay(100);
            if (FingerValid)
            {
                loopFinger = false;
                Console.WriteLine("ID SCANNER RADIO POS");
                Utility.WriteLog("Ganti kartu condition : id scanner radio pos", "step-action");
                scanner.RadioPos();
                OnClick.InvokeAsync("gantikartufingerberhasil");
            }
            else
            {
                await Task.Delay(100);
                StateHasChanged();
                trylimit -= 1;
                if (trylimit == 0)
                {
                    Console.WriteLine("ID SCANNER RETURN CARD");
                    Utility.WriteLog("Ganti kartu condition : id scanner return card", "step-action");
                    scanner.ReturnCard();
                    Console.WriteLine("ID SCANNER CLOSE READER");
                    Utility.WriteLog("Ganti kartu condition : id scanner close reader", "step-action");
                    scanner.CloseCVRReader();
                    loopFinger = false;
                    Console.WriteLine("MOVE TO HOME");
                    Utility.WriteLog("Ganti kartu condition : move to home", "step-action");
                    OnClick.InvokeAsync("home");
                }
            }
            await Task.Delay(2000);
        } while (loopFinger);
    }

    private async Task KTP()
    {
        loopFinger = false;
        Console.WriteLine("ID SCANNER RETURN CARD");
        Utility.WriteLog("Ganti kartu condition : id scanner return card", "step-action");
        scanner.ReturnCard();
        Console.WriteLine("ID SCANNER CLOSE READER");
        Utility.WriteLog("Buka rekening condition : id scanner close reader", "step-action");
        scanner.CloseCVRReader();
        Console.WriteLine("MOVE TO GANTI KARTU PINDAI KTP");
        Utility.WriteLog("Ganti kartu condition : move to ganti kartu pindai ktp", "step-action");
        OnClick.InvokeAsync("gantikartupindaiktp");
    }
}
