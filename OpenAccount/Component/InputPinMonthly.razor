                        StateHasChanged();
                        return;
                        //OnClick.InvokeAsync("error");
                    }
                    else
                    {
                        //isTimeOut = true;
                        isComplete = false;
                        isFailed = false;
                        isTimeOut = false;
                        isSalah = false;
                        errorcode = (string)jobResult["RESPONSE"].SelectToken("ERROR_CODE");
