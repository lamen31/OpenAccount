@code {
    [Parameter]
    public EventCallback<string> OnClick { get; set; }

    private TimeSpan span;
    private int overtime = 60000;
    private bool isTimeOut = false;
    private bool isTime = false;
    private bool isTimer = true;
    private DateTime starttime;

    private string result;

    private async Task ResetTimer()
    {
        starttime = DateTime.Now;
    }
    private async Task IdleTime()
    {
        do
        {
            span = DateTime.Now - starttime;
            if (overtime > 0 && span.TotalMilliseconds > overtime)
            {
                isTime = true;
                isTimeOut = true;
                break;
            }
        } while (isTimeOut == false);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Utility.WriteLog("Buku condition : entered into buku berhasil", "step-action");
            trx.timeOut = "inputpinmonthly";
            isTimer = true;
            starttime = DateTime.Now;
            await Task.Run(() => IdleTime());
            if (isTime && isTimeOut)
            {
                isTimeOut = true;
                await Task.Delay(100);
                StateHasChanged();
                await Task.Delay(2000);
                isTime = false;
                OnClick.InvokeAsync("konfirmasitimeout");
                return;
            }
        }
    }

    private async Task Kembali()
    {
        isTimer = false;
        isTimeOut = true;
        Utility.WriteLog("Buku condition : move to home", "step-action");
        OnClick.InvokeAsync("default");
        return;
    }
    private async Task Lanjut()
    {
        isTimer = false;
        isTimeOut = true;
        Utility.WriteLog("Buku condition : move to input pin monthly", "step-action");
        OnClick.InvokeAsync("inputpinmonthly");
        return;
    }

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(500);
        Utility.WriteLog("Buku condition : move to ambil kartu", "step-action");
        trx.statusLayanan = "SUCCESS";

        if (trx.MSISDN.Length > 9 && trx.MSISDN != string.Empty && trx.MSISDN != "" && trx.MSISDN != "000000000000")
        {
            try
            {
                Utility.WriteLog("Histori condition : hit service send sms notif start", "step-action");
                result = await HitServices.SendSms(trx, config);
                if (result.Contains("1111"))
                {
                    trx.smsNotif = "SUCCESS";
                    Utility.WriteLog("Buku condition : SMS SUCCESS", "step-action");
                }
                else
                {
                    trx.smsNotif = "FAILED";
                    Utility.WriteLog("Buku condition : SMS FAILED " + result, "step-action");
                }
            }
            catch(Exception ex)
            {
                trx.smsNotif = "FAILED";
                Utility.WriteLog("Buku condition : SMS FAILED " , "step-action");
            }
        }
        else
        {
            trx.smsNotif = "NOT REGISTER";
            Utility.WriteLog("Buku condition : HANDPHONE NUMBER NOT REGISTER ", "step-action");
        }

        if (trx.emailNasabah != string.Empty && trx.emailNasabah != "")
        {
            trx.emailAttachment = "";
            trx.attachmentPath = "";
            try
            {
                Utility.WriteLog("Histori condition : hit service send email notif start", "step-action");
                result = await HitServices.SendEmail(trx, config);
                await Task.Delay(3000);
                JObject jobResult = JObject.Parse(result);
                if (jobResult["fcdEmailResult"]["statusCode"].ToString() == "2111")
                {
                    trx.emailNotif = "SUCCESS";
                    Utility.WriteLog("Buku condition : SEND EMAIL NOTIF SUCCESS", "step-action");
                }
                else
                {
                    trx.emailNotif = "FAILED";
                    //trx.setErrorService("EmailFailed", "Failed to Send Email");
                    //HitServices.SendLog(trx, config, "HISTORI BERHASIL: Failed to send Email, " + jobResult["fcdEmailResult"]["statusDesc"].ToString());
                    //OnClick.InvokeAsync("error");
                    Utility.WriteLog("Buku condition : Failed to send Email notif, " + jobResult["fcdEmailResult"]["statusDesc"].ToString(), "step-action");
                }
            }
            catch(Exception ex)
            {
                trx.emailNotif = "FAILED";
                Utility.WriteLog("Buku condition : Failed to send Email notif, ", "step-action");
            }
        }
        else
        {
            trx.emailNotif = "NOT REGISTER";
            Utility.WriteLog("Buku condition : Email not register ", "step-action");
        }

        HitServices.SendLog(trx, config, "");
        //await Task.Delay(8000);
        //OnClick.InvokeAsync("default");
    }
}
