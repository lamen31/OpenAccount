@code {
    [Parameter]
    public EventCallback<string> OnClick { get; set; }

    private string jenisTabungan = string.Empty;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Utility.WriteLog("Buka rekening condition : entered into buka rekening jenis tabungan", "step-action");
        }
    }

    private void InputField1()
    {
        jenisTabungan = "Simpedes";
        trxbaru.setJenisTabungan(jenisTabungan);
        ModelKartu();
    }

    private void InputField2()
    {
        jenisTabungan = "Britama";
        trxbaru.setJenisTabungan(jenisTabungan);
        ModelKartu();
    }

    private void InputField3()
    {
        jenisTabungan = "Britama Bisnis";
        trxbaru.setJenisTabungan(jenisTabungan);
        ModelKartu();
    }

    private async Task ModelKartu()
    {
        Utility.WriteLog("Buka rekening condition : set jenis tabungan " + jenisTabungan + " success", "step-action");
        Utility.WriteLog("Buka rekening condition : move to buka rekening model kartu", "step-action");
        OnClick.InvokeAsync("bukarekeningmodelkartu");
    }

    private async Task KTP()
    {
        Utility.WriteLog("Buka rekening condition : move to buka rekening ktp", "step-action");
        OnClick.InvokeAsync("bukarekeningktp");
    }
}
