                            }
                            Utility.WriteLog("Buka rekening condition : " + strpin, "step-action");
                            Utility.WriteLog("Buka rekening condition : " + strpinNomor, "step-action");
                            Utility.WriteLog("Buka rekening condition : EDC pin 5", "step-action");
