                    serialPort.Close();
                    Utility.WriteLog("Buka rekening condition : EDC NAK", "step-action");
                }
            }
            StateHasChanged();
            switch (strpin.Length)
            {
                case 1:
                    strpin = strpin.Substring(0, strpin.Length - 1) + "*";
                    break;
                case 2:
