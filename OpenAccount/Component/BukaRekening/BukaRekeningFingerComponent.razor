@code {
    [Parameter]
    public EventCallback<string> OnClick { get; set; }

    private bool isFingerValid = true;
    private bool FingerValid = true;
    private bool loopFinger = false;
    private int trylimit = 3;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(1000);
        scanner.BackSwallow();
        loopFinger = true;
        CheckFingerValid();
        //OnClick.InvokeAsync("bukarekeningfingerberhasil");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Console.WriteLine("ENTERED INTO BUKA REKENING FINGER PRINT");
            Utility.WriteLog("Buka rekening condition : entered into buka rekening finger print", "step-action");
        }
    }

    private async Task CheckFingerValid()
    {
        do
        {
            await Task.Delay(100);
            if (FingerValid)
            {
                loopFinger = false;
                OnClick.InvokeAsync("bukarekeningfingerberhasil");
            }
            else
            {
                isFingerValid = false;
                await Task.Delay(100);
                StateHasChanged();
                trylimit -= 1;
                if (trylimit == 0)
                {
                    scanner.ReturnCard();
                    scanner.CloseCVRReader();
                    loopFinger = false;
                    OnClick.InvokeAsync("home");
                }
            }
            await Task.Delay(2000);
        } while (loopFinger);
    }
    private async Task Home()
    {
        loopFinger = false;
        OnClick.InvokeAsync("home");
    }
}
