            </div>
            <div class="col-xl-6 order-1 order-lg-2 hero-img" data-aos="fade-left">
                @if (!isFingerValid)
                {
                    <h5 style="color: #00529C;">Pindai Jari Gagal, Kesempatan untuk mencoba @trylimit.ToString()x lagi</h5>
                }
                else
                {
                    <div class="spinner-border text-danger" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                }
                <br>
                <img src="../assets/img/finger.png" class="img-fluid" alt=""><br>

            </div>
        </div>
    </div>
</section>
