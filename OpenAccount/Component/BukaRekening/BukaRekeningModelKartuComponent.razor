@code {
    [Parameter]
    public EventCallback<string> OnClick { get; set; }

    private string modelKartu = string.Empty;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Utility.WriteLog("Buka rekening condition : entered into buka rekening model kartu", "step-action");
        }
    }

    private void Field1()
    {
        modelKartu = "Britama 1";
        trxbaru.setModelKartu(modelKartu);
        Syarat();
    }

    private void Field2()
    {
        modelKartu = "Britama 2";
        trxbaru.setModelKartu(modelKartu);
        Syarat();
    }

    private async Task Syarat()
    {
        Utility.WriteLog("Buka rekening condition : set model kartu " + modelKartu + " success", "step-action");
        Utility.WriteLog("Buka rekening condition : move to buka rekening syarat", "step-action");
        OnClick.InvokeAsync("bukarekeningsyarat");
    }

    private async Task Jenis()
    {
        Utility.WriteLog("Buka rekening condition : move to buka rekening jenis", "step-action");
        OnClick.InvokeAsync("bukarekeningjenis");
    }
}
