@code {
    [Parameter]
    public EventCallback<string> OnClick { get; set; }

    private string tujuanRekening = string.Empty;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Utility.WriteLog("Buka rekening condition : entered into buka rekening jenis tujuan", "step-action");
        }
    }

    private async Task Home()
    {
        Utility.WriteLog("Buka rekening condition : move to home", "step-action");
        OnClick.InvokeAsync("home");
    }

    private void InputField1()
    {
        tujuanRekening = "Transaksi";
        trxbaru.setTujuanRekening(tujuanRekening);
        InputKTP();
    }

    private void InputField2()
    {
        tujuanRekening = "Menabung/Investasi";
        trxbaru.setTujuanRekening(tujuanRekening);
        InputKTP();
    }

    private void InputField3()
    {
        tujuanRekening = "Keperluan Pribadi";
        trxbaru.setTujuanRekening(tujuanRekening);
        InputKTP();
    }

    private void InputField4()
    {
        tujuanRekening = "Tujuan Lainnya";
        trxbaru.setTujuanRekening(tujuanRekening);
        InputKTP();
    }

    private async Task InputKTP()
    {
        Utility.WriteLog("Buka rekening condition : set tujuan rekening " + tujuanRekening + " success", "step-action");
        Utility.WriteLog("Buka rekening condition : move to buka rekening ktp", "step-action");
        OnClick.InvokeAsync("bukarekeningktp");
    }
}
