@code {
    [Parameter]
    public EventCallback<string> OnClick { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Console.WriteLine("ENTERED INTO BUKA REKENING BERHASIL STRUK");
            Utility.WriteLog("Buka rekening condition : entered into buka rekening berhasil struk", "step-action");
            print.PrintBukaRekening(trxbaru);
        }
    }

    private async Task Home()
    {
        OnClick.InvokeAsync("home");
    }
}
