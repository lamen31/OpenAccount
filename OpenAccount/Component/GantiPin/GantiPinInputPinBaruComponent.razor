                                strpinNomor += "4";
                            }
                            Utility.WriteLog("Ganti pin condition : EDC pin 4", "step-action");
                            Utility.WriteLog("Ganti pin condition : " + strpin, "step-action");
                            Utility.WriteLog("Ganti pin condition : " + strpinNomor, "step-action");
                            break;
